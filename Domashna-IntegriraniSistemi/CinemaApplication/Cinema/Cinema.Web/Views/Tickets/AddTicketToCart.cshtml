@model Cinema.Domain.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "Add to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Ticket To Cart</h1>

<div class="row">

    <div class="col-md-9 m-auto">

        <form asp-action="AddTicketToCart" method="post">
            <input type="hidden" asp-for="TicketId" />

            <div class="form-group">
                <label asp-for="SelectedTicket.MovieName"></label>
                <input disabled asp-for="SelectedTicket.MovieName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.CinemaHall"></label>
                <input disabled asp-for="SelectedTicket.CinemaHall" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.ProjectionDateTime"></label>
                <input disabled asp-for="SelectedTicket.ProjectionDateTime" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.TicketPrice"></label>
                <input disabled asp-for="SelectedTicket.TicketPrice" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>

        </form>

    </div>

</div>